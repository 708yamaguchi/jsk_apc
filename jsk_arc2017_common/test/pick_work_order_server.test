<launch>
  <node pkg="jsk_arc2017_common" type="pick_work_order_server.py" name="pick_work_order_0" respawn="true">
    <rosparam subst_value="true">
      json_dir: $(find jsk_arc2017_common)/data/json/example_pick_task
    </rosparam>
  </node>

  <test test-name="work_order_published" pkg="jsk_tools"  type="test_topic_published.py" >
    <param name="~topic_0" value="/pick_work_order_0/left_hand" />
    <param name="~timeout_0" value="10" />
    <param name="~topic_1" value="/pick_work_order_0/right_hand" />
    <param name="~timeout_1" value="10" />
  </test>
</launch>
