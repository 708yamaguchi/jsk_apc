<launch>
    <arg name="device" default="/dev/video0" />
    <arg name="frame_id" default="camera" />
    <arg name="camera_info_url" default="file://$(find roseus_tutorials)/launch/usb-camera.yaml" />
    <node name="uvc_camera" pkg="uvc_camera" type="uvc_camera_node" output="screen" >
        <param name="device" value="$(arg device)" />
        <param name="camera_info_url" type="string" value="$(arg camera_info_url)" />
        <param name="width" value="640" />
        <param name="height" value="480" />
        <param name="fps" value="30" />
        <param name="frame_id" value="$(arg frame_id)" />
        <remap from="/image_raw" to="/image" />
    </node>

    <!-- <include file="$(find roseus_tutorials)/launch/jsk_image_proc.launch" /> -->

    <!-- <node pkg="jsk_perception" type="image_publisher.py" name="image_publisher" output="screen"> -->
    <!--     <param name="file_name" type="string" value="$(find jsk_2014_picking_challenge)/data/frame0001.jpg" /> -->
    <!--     <remap from="/image_publisher/output" to="/image" /> -->
    <!-- </node> -->

    <node pkg="image_view" type="image_view" name="image_view_raw_image" ><param name="image" type="string" value="/image" /></node>
    <node pkg="imagesift" type="imagesift" name="imagesift" ></node>
</launch>